<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="EmailSender_full_log" fileName="logs/full_log.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

        <File name="EmailSender_errors" fileName="logs/email_sender_errors.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="com.mailsender" additivity="true">
            <AppenderRef ref="Console" level="all"/>
            <AppenderRef ref="EmailSender_full_log" level="all"/>
            <AppenderRef ref="EmailSender_errors" level="error"/>
        </Logger>
    </Loggers>

</Configuration>